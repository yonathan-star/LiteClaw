{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liteclaw.dev/schemas/task-trace.schema.json",
  "title": "TaskTrace",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "task_id",
    "plan_id",
    "status",
    "started_at",
    "events"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "format": "uuid"
    },
    "plan_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": [
        "queued",
        "running",
        "completed",
        "failed",
        "denied",
        "timeout"
      ]
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "ended_at": {
      "type": "string",
      "format": "date-time"
    },
    "agent": {
      "type": "string",
      "enum": [
        "conversation",
        "file",
        "shell",
        "browser"
      ]
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Event"
      }
    },
    "error": {
      "type": "string"
    }
  },
  "$defs": {
    "Event": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "timestamp",
        "level",
        "message"
      ],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "level": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ]
        },
        "step_id": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "object"
        }
      }
    }
  }
}
