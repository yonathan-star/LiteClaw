{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liteclaw.dev/schemas/permission-scope.schema.json",
  "title": "PermissionScope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "mode",
    "targets"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "file",
        "shell",
        "network",
        "cloud"
      ]
    },
    "mode": {
      "type": "string",
      "enum": [
        "read",
        "write",
        "exec",
        "fetch"
      ]
    },
    "targets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "reason": {
      "type": "string"
    }
  }
}
